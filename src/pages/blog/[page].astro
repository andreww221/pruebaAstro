---
  // Type GetStaticPaths de Astro
import BlogPost from '../components/BlogPost.astro';

import Mainlayout from '../layouts/Mainlayout.astro';

import {getCollection}  from 'astro:content';



export async function getStaticPaths({paginate}) {

    const blogs = await getCollection('blog');

    return paginate(blogs, {pageSize:2})
}


const { page } = Astro.props;


---


<Mainlayout title="pagination">
  <div class="py-10 mx-auto">
    <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
      Fernando's Blog paginado
    </h1>
  </div>

  <section class="bg-gray-900" aria-label="Entradas de blog">
    <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
      {page.data.map((post) => <BlogPost post={post} />)}
    </div>
  </section>

  <section aria-label="Controles" class="flex justify-between mt-10">

    <!--   page .. ?? prev   -->
    <a
      href={page.url.prev}
      class:list={{
        disabled: !page.url.prev,
      }}>Anteriores</a
    >
    
<!--   page .. ?? next   -->
    <a
      href={page.url.next}
      class:list={{
        disabled: !page.url.next,
      }}>Siguientes</a
    >
  </section>
</Mainlayout>


